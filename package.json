{
  "name": "rigby",
  "version": "1.5.1",
  "description": "A micro library for managing state with React.",
  "browser": "dist/rigby.js",
  "main": "lib/index.js",
  "module": "es/index.js",
  "jsnext:main": "es/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "dist",
    "lib",
    "es",
    "src"
  ],
  "scripts": {
    "clean": "rimraf lib dist es",
    "lint": "npm run lint:src",
    "lint:src": "eslint src",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:commonjs": "tsc --project tsconfig.commonjs.json",
    "build:es": "tsc --project tsconfig.es.json",
    "build:umd": "webpack",
    "build:umd:min": "cross-env NODE_ENV=production webpack",
    "build": "npm run build:commonjs && npm run build:es && npm run build:umd && npm run build:umd:min",
    "prepare": "npm run clean && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/captray/rigby.git"
  },
  "author": "Raymond McDermott",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/captray/rigby/issues"
  },
  "homepage": "https://github.com/captray/rigby#readme",
  "devDependencies": {
    "awesome-typescript-loader": "^3.2.1",
    "cross-env": "^1.0.8",
    "rimraf": "^2.6.1",
    "typescript": "^2.4.1",
    "webpack": "^2.6.1"
  },
  "dependencies": {
    "core-js": "^2.4.1"
  }
}
